{
  "name": "@mmhuntsberry/figma-rest-test",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/figma-rest-test",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/figma-rest-test",
        "outputPath": "dist/apps/figma-rest-test"
      },
      "dependsOn": [
        "@mmhuntsberry/figma-rest-test:merge-tokens",
        "@mmhuntsberry/figma-rest-test:build-brand-css"
      ],
      "configurations": {
        "development": {
          "outputPath": "apps/figma-rest-test"
        },
        "production": {
          "generatePackageJson": true
        }
      }
    },

    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@mmhuntsberry/figma-rest-test:build",
        "dev": true,
        "port": 3000
      },
      "configurations": {
        "development": {
          "buildTarget": "@mmhuntsberry/figma-rest-test:build:development",
          "dev": true,
          "port": 3000
        },
        "production": {
          "buildTarget": "@mmhuntsberry/figma-rest-test:build:production",
          "dev": false
        }
      }
    },

    "export-to-neon": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/figma-rest-test",
        "commands": [
          {
            "command": "tsx scripts/export-to-neon.ts"
          }
        ]
      }
    },
    "generate-brand-css": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/figma-rest-test",
        "commands": [
          {
            "command": "tsx scripts/generate-brand-css.ts"
          }
        ]
      }
    },

    "merge-tokens": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/figma-rest-test",
        "commands": [
          {
            "command": "tsx scripts/merge-tokens-to-file.ts"
          }
        ]
      }
    },

    "build-brand-css": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/figma-rest-test",
        "commands": [
          {
            "command": "npx style-dictionary build --config scripts/config-brand.mjs"
          }
        ]
      }
    },
    "start": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "@mmhuntsberry/figma-rest-test:build:development",
        "dev": true,
        "port": 3000
      }
    },

    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/figma-rest-test/**/*.{ts,tsx,js,jsx}"]
      }
    },

    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx scripts/seed.ts",
        "cwd": "apps/figma-rest-test"
      }
    },

    "db:push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit push",
        "cwd": "apps/figma-rest-test"
      }
    },

    "db:studio": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit studio",
        "cwd": "apps/figma-rest-test"
      }
    }
  },
  "tags": []
}
