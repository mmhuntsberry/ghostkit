{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // emit declarations next to .js output:
    "declaration": true,
    "declarationDir": "../../dist/packages/components",
    "outDir": "../../dist/packages/components",

    // crucial bits for JSX + default imports:
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // modern module + resolution settings:
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2015",

    // quality of life:
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/shims-css.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
