{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "components",
  "root": "packages/components",
  "sourceRoot": "packages/components/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/components/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "tsConfig": "packages/components/tsconfig.lib.json",

        "entryFile": "packages/components/src/index.ts",

        "outputPath": "dist/packages/components",

        "emptyOutDir": true,

        "postcssConfig": "packages/components/postcss.config.js"
      },
      "configurations": {
        "development": { "mode": "development" },
        "production": { "mode": "production" }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/components/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": { "ci": true, "codeCoverage": true }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish",
        "cwd": "dist/packages/components"
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/components/.storybook"
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "configDir": "packages/components/.storybook",
        "outputPath": "dist/packages/components/storybook-static"
      }
    }
  }
}
